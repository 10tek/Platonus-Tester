<Window x:Class="Platonus_Tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Platonus_Tester"
        mc:Ignorable="d"
        Title="MainWindow" Height="521.053" Width="777.632" Icon="icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="QuestionGrid" Margin="10,34,10,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="53*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="229*"/>
                <ColumnDefinition Width="73*"/>
                <ColumnDefinition Width="73*"/>
            </Grid.ColumnDefinitions>
            <RadioButton x:Name="RBVariant1" Content="Variant 1" Margin="10" Grid.Row="3" BorderBrush="#FF403F3F" Background="White" FontSize="14"/>
            <RadioButton x:Name="RBVariant2" Content="Variant 2" Margin="10" Grid.Row="4" BorderBrush="#FF403F3F" Background="White" FontSize="14"/>
            <RadioButton x:Name="RBVariant3" Content="Variant 3" Margin="10" Grid.Row="5" BorderBrush="#FF403F3F" Background="White" FontSize="14"/>
            <RadioButton x:Name="RBVariant4" Content="Variant 4" Margin="10" Grid.Row="6" BorderBrush="#FF403F3F" Background="White" FontSize="14"/>
            <RadioButton x:Name="RBVariant5" Content="Variant 5" Margin="10" Grid.Row="7" BorderBrush="#FF403F3F" Background="White" FontSize="14"/>
            <TextBlock x:Name="textBlock2" Margin="10" TextWrapping="Wrap" Text="TextBlock" FontSize="16" Background="#FFF0F0F0" Grid.RowSpan="3"/>
            <Image x:Name="image1" Grid.Column="1" Margin="10" Grid.RowSpan="5" OpacityMask="#FFF1F1F1" Stretch="Fill" Grid.Row="3" Grid.ColumnSpan="2"/>
            <Button x:Name="NextButton" Content="Button" Grid.Column="2" Margin="10"/>
            <Button x:Name="CheckButton" Content="Button" Grid.Column="1" Margin="10"/>
        </Grid>
        <Menu x:Name="menu" Height="29" VerticalAlignment="Top" FontSize="14">
            <MenuItem Header="Программа" VerticalAlignment="Center">
                <MenuItem Header="Настройки"/>
                <MenuItem Header="Цветовая схема" Click="ChangeColorSchemeClick"/>
            </MenuItem>
            <MenuItem Header="Тестирование">
                <MenuItem Header="Загрузить файл"/>
                <MenuItem Header="Начать заново"/>
                <MenuItem Header="Закончить"/>
            </MenuItem>
            <MenuItem Header="О программе"/>
        </Menu>
        <StatusBar Height="35" VerticalAlignment="Bottom">
            <Label x:Name="versionLabel" Content="Version"/>
            <Label x:Name="swearLabel" Content="Swear Mode"/>
            <Label x:Name="informationLabel" Content="Information"/>
        </StatusBar>
        <ProgressBar Margin="0,0,10,8" Height="18" VerticalAlignment="Bottom" Value="45" HorizontalAlignment="Right" Width="283"/>
        <Grid x:Name="StartGrid" Margin="721,429,-701,-355" AllowDrop="True" DragOver="StartGrid_OnDragOver" Drop="StartGrid_OnDrop" Background="White" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="118"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="196"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="StartButton" Content="Button" Margin="10,8,10,62" FontSize="20" Padding="15,1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsDefault="True" Grid.Column="1" Grid.Row="1" Click="StartButton_Click"/>
            <Button x:Name="SettingsButton" Content="Button" Margin="10,0,10,9" FontSize="20" Padding="15,1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="48" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1"/>
            <TextBox x:Name="textBox" Height="41" Margin="10,10,10,0" TextWrapping="Wrap" Text="Welcome Text" VerticalAlignment="Top" Grid.ColumnSpan="3" FontFamily="Segoe UI Semibold" FontSize="22"/>
            <TextBlock x:Name="textBlock" Margin="10,56,10,0" TextWrapping="Wrap" Text="TextBlock" Grid.ColumnSpan="3" Height="132" VerticalAlignment="Top"/>
            <Image x:Name="image" Margin="0,0,10,9" Grid.Row="1" Grid.Column="2" Stretch="Fill" Source="logo.png" HorizontalAlignment="Right" Width="257" Height="109" VerticalAlignment="Bottom"/>
            <TextBlock x:Name="textBlock1" Margin="10,193,10,10" TextWrapping="Wrap" Text="Information about processes" Grid.ColumnSpan="3" FontSize="18" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
