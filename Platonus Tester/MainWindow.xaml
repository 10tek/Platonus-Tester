<Window x:Name="MainWindow1" x:Class="Platonus_Tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Platonus_Tester"
        mc:Ignorable="d"
        Title="Platonus Tester" Height="521.053" Width="777.632" Icon="icon.ico" Loaded="Window_Loaded" Initialized="MainWindow1_Initialized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="QuestionGrid" Margin="10,34,10,40" Background="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="53*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="229*"/>
                <ColumnDefinition Width="73*"/>
                <ColumnDefinition Width="73*"/>
            </Grid.ColumnDefinitions>
            <RadioButton x:Name="RBVariant2" Content="Variant 2" Margin="10,10,55,10" Grid.Row="4" Grid.Column="0"
                         BorderBrush="#FF403F3F" Background="{x:Null}" FontSize="16"/>
            <RadioButton x:Name="RBVariant1" Content="Variant 1" Margin="10,10,55,10" Grid.Row="3" BorderBrush="Black" Background="{x:Null}" FontSize="16" Foreground="Black" />
            <RadioButton x:Name="RBVariant3" Content="Variant 3" Margin="10,10,55,10" Grid.Row="5" BorderBrush="#FF403F3F" Background="{x:Null}" FontSize="16"/>
            <RadioButton x:Name="RBVariant4" Content="Variant 4" Margin="10,10,55,10" Grid.Row="6" BorderBrush="#FF403F3F" Background="{x:Null}" FontSize="16"/>
            <RadioButton x:Name="RBVariant5" Content="Variant 5" Margin="10,10,55,10" Grid.Row="7" BorderBrush="#FF403F3F" Background="{x:Null}" FontSize="16"/>
            <TextBlock x:Name="questionTextBlock" Margin="10" TextWrapping="Wrap" Text="TextBlock" FontSize="16" Grid.RowSpan="3"/>
            <Image x:Name="image1" Grid.Column="1" Margin="10" Grid.RowSpan="5" OpacityMask="#FFF1F1F1" Stretch="Fill" Grid.Row="3" Grid.ColumnSpan="2"/>
            <Button x:Name="NextButton" Content="Next" Grid.Column="2" Margin="10" Click="NextButton_Click"/>
            <Button x:Name="CheckButton" Content="Check" Grid.Column="1" Margin="10" Click="CheckButton_Click"/>
            <Rectangle  Margin="0,10,10,10" Grid.Row="3" HorizontalAlignment="Right" Width="40" Fill="#FFF4F4F5"/>
            <Rectangle Fill="#FFF4F4F5" Margin="0,10,10,10" Grid.Row="4" Stroke="Black" HorizontalAlignment="Right" Width="40"/>
            <Rectangle Fill="#FFF4F4F5" Margin="0,10,10,10" Grid.Row="5" Stroke="Black" HorizontalAlignment="Right" Width="40"/>
            <Rectangle Fill="#FFF4F4F5" Margin="0,10,10,10" Grid.Row="6" Stroke="Black" HorizontalAlignment="Right" Width="40"/>
            <Rectangle Fill="#FFF4F4F5" Margin="0,10,10,10" Grid.Row="7" Stroke="Black" HorizontalAlignment="Right" Width="40"/>
        </Grid>
        <Menu x:Name="menu" Height="29" VerticalAlignment="Top" FontSize="14">
            <MenuItem Header="Программа" VerticalAlignment="Center">
                <MenuItem Header="Настройки" Click="SettingsMenuItem_OnClick" />
                <MenuItem Header="Цветовая схема" Click="ChangeColorSchemeClick"/>
            </MenuItem>
            <MenuItem Header="Тестирование">
                <MenuItem Header="Загрузить файл" Click="LoadSourceMenuItem_OnClick" />
                <MenuItem Header="Начать заново" Click="StartAgainMenuItem_OnClick" />
                <MenuItem Header="Закончить"  Click="FinishMenuItem_OnClick"   />
            </MenuItem>
            <MenuItem x:Name="AboutMenuItem" Header="О программе" Click="AboutMenuItem_Click"/>
        </Menu>
        <StatusBar Height="35" VerticalAlignment="Bottom">
            <Label x:Name="versionLabel" Content="Version"/>
            <Label x:Name="swearLabel" Content="Swear Mode"/>
            <Label x:Name="informationLabel" Content="Information"/>
        </StatusBar>
        <ProgressBar x:Name="progressBar" Margin="0,0,10,8" Height="18" VerticalAlignment="Bottom" Value="45" HorizontalAlignment="Right" Width="283"/>
        <Grid x:Name="StartGrid" Margin="540,448,-520,-374" AllowDrop="True" DragOver="StartGrid_OnDragOver" Drop="StartGrid_OnDrop" Background="#FFF7F7F7" DragEnter="StartGrid_DragEnter" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="118"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="196"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="StartButton" Content="Start" Margin="10,8,10,62" FontSize="20" Padding="15,1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsDefault="True" Grid.Column="1" Grid.Row="1" Click="StartButton_Click"/>
            <Button x:Name="SettingsButton" Content="Settings" Margin="10,0,10,9" FontSize="20" Padding="15,1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="48" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1" Click="SettingsButton_Click"/>
            <TextBlock x:Name="textBlock" Margin="10,56,10,0" TextWrapping="Wrap" Text="TextBlock" Grid.ColumnSpan="3" Height="132" VerticalAlignment="Top"/>
            <Image x:Name="image" Margin="0,0,10,9" Grid.Row="1" Grid.Column="2" Stretch="Fill" Source="logo.png" HorizontalAlignment="Right" Width="257" Height="109" VerticalAlignment="Bottom"/>
            <TextBlock x:Name="serviceTextBox" Margin="10,193,10,10" TextWrapping="Wrap" Text="Information about processes" Grid.ColumnSpan="3" FontSize="18" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock x:Name="textBlock1" Margin="10,10,10,0" TextWrapping="Wrap" Text="Welcome Text" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="41" FontSize="22" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
